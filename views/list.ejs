<%-include("header") -%>
<body>
    <div class="box" id="heading">

        <h1> <%= listTitle %> </h1>
    </div>

    <div class="box">
        
    
        <% for(var i=0; i<newListItem.length;i++){ %>
   
            <div class="item">
                <input type="checkbox">
                  <p><%= newListItem[i] %></p>
            </div>

        <% } %>


        <form action="/" method="POST">
            <input type="text" name="newItem" placeholder="New item" autocomplete="off" >
            <button type="submit" name="list" value=<%= listTitle %> >+</button>
        </form>

    </div>


    <%-include("footer") -%>
    

</html>